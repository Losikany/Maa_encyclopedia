<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/number_textview"
            android:layout_width="112dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
           android:textAlignment="center"
            android:text="1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/masaai_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/number_textview"
            android:text="Maasai -> "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trans_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@id/number_textview"
            android:layout_toEndOf="@id/masaai_text"
            android:layout_toRightOf="@id/masaai_text"
            android:text="Translat"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/meaning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trans_text"
            android:paddingTop="10dp"
            android:text="English -> "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mean_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trans_text"
            android:layout_toEndOf="@id/meaning_text"
            android:layout_toRightOf="@id/masaai_text"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:text="Meaning"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>