<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="10dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/proverb_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="proverb"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/masaai_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/proverb_textview"
            android:text="Translation -> "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trans_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@id/proverb_textview"
            android:layout_toEndOf="@id/masaai_text"
            android:layout_toRightOf="@id/masaai_text"
            android:text="Translat"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/meaning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trans_text"
            android:paddingTop="10dp"
            android:text="Meaning -> "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mean_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trans_text"
            android:layout_toEndOf="@id/meaning_text"
            android:layout_toRightOf="@id/masaai_text"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:text="Meaning"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>